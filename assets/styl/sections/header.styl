* HEADER
*
--------------------------------------------------------------------*/

header
  border-bottom: 1px solid $gray-lighter
  
  h3
    margin: 10px 0
    padding-left: 80px
    background: url('/img/logo.svg') 0 0 no-repeat
    background-size: contain
    text-transform: uppercase

  nav
    
    h3
      line-height: 80px
    a
      line-height: 100px

    .label
      display: inline-block
      padding: 3px 5px
      margin-left: 5px
      border-radius: 3px
      background-color: $green-light
      color: white
      font: 400 $font-small/1.25 $font-franklin

