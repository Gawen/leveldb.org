* INTRO
*
--------------------------------------------------------------------*/

.intro
  position: relative
  padding-bottom: 40px
  text-align: center

  &:after
    content: ''
    position: absolute
    left: 50%
    top: 100%
    height: 1px
    width: 20%
    margin-left: -10%
    background-color: $gray-lighter

  h1
    margin-bottom: 0

  h3
    margin-top: 0
    font-weight: 400
    line-height: 1.2

@media $desktop

  .intro h4
    margin: 0 auto 30px
    max-width: 80%