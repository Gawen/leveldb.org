/*--------------------------------------------------------------------
*
* BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: 500 $font-base/$line-height-base $font-ffmore
  -webkit-font-smoothing: antialiased

::-moz-selection
  background-color: $green
  color: white

::selection
  background-color: $green
  color: white

h1, h2, h3, h4, h5, h6
  font-family: $font-franklin
  font-weight: 900

h1, h2, h3
  line-height: $line-height-tight

h1
  font-size: $font-heading-one

h2
  font-size: $font-heading-two

h3
  font-size: $font-heading-three

h4
  font-size: $font-heading-four

h5
  font-size: $font-heading-five

h6
  font-size: $font-heading-six

small
  font-size: $font-small

a
  cursor: pointer
  color: $green
  text-decoration: none

  &:hover
    color: $green-dark
    transition: all .5s ease-in
    -webkit-transition: all .5s ease-in

  &:focus
    outline: none

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

.pull-left
  float: left

.pull-right
  float: right

img, video, iframe
  max-width: 100%

.content
  margin: 0 auto

@media $desktop

  .content
    width: 70%

@media $mobile-devices

  .content
    width: 90%